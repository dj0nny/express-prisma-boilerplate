generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ðŸ‘‡ add the tables model here

model Todo {
  id   Int    @id @default(autoincrement())
  name String @db.VarChar(250)
  description String @db.Text
}